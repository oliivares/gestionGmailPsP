<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController">

    <Label text="Inicio de Sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="txtCorreo" promptText="Correo electrónico" />

    <PasswordField fx:id="txtPassword" promptText="Contraseña de aplicación" />

    <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#handleLogin" />

    <Label fx:id="lblError" text="" style="-fx-text-fill: red;" />

</VBox>
